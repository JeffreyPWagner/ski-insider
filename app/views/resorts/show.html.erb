
<div class="bg-img" style="background-image: url(<%= rails_blob_url(@resort.trail) %>) !important"></div>


<h1><%= @resort.name %> </h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Score</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resort.tips.each do |tip| %>
      <tr>
        <td><%= tip.title %></td>
        <td><%= tip.body %></td>
        <td><%= tip.score %></td>
        <td><%= tip.category %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for([@resort, @resort.tips.build]) do |form|  %>

  <%= form.hidden_field :user_id, :value => @user.id %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.number_field :category %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', resorts_path %>
